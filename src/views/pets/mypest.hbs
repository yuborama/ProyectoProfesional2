<div class="reveal" id="M-modific" data-reveal>
    <div class="card">
        <div class="card-divider">
            Modificando mascota
        </div>
        <div class="card-section">
            <form action="" method="POST" id="formularioModificarp">
                <input type="hidden" name="_method" value="PUT">
                <input type="text" name="nombre" placeholder="Nombre" value="{{pet.nombre}}">
                <select name="tipo" id="selectModificarp">
                    <option value=""></option>
                </select>
                <div class="row">
                    <label><input type="radio" name="sexo" value="macho">Macho
                        <input type="radio" name="sexo" value="hembra" checked>Hembra</label>
                </div>
                <div class="row">
                    <label><input type="radio" name="tamaño" value="grande">Grande
                        <input type="radio" name="tamaño" value="mediano" checked>Mediano
                        <input type="radio" name="tamaño" value="pequeño">Pequeño</label>
                </div>
                <textarea name="descripcion" rows="5" cols="5"
                    placeholder="una caracteristicas de tu mascota">{{pet.descripcion}}</textarea>
                <button class="button" type="submit" value="Submit">Subir</button>
            </form>
        </div>
    </div>
    <button class="close-button" data-close aria-label="Close modal" type="button">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="reveal" id="M-Lcite" data-reveal>
    <h1>soy el modal de las citas medicas</h1>
    <p class="lead">Your couch. It is mine.</p>
    <p>I'm a cool paragraph that lives inside of an even cooler modal. Wins!</p>
    <button class="close-button" data-close aria-label="Close modal" type="button">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="reveal" id="M-Ncite" style="width: 22em;" data-reveal>
    <div class="card" style="width: 20em;">
        <div class="card-divider">
            <h5>Nueva cita</h5>
        </div>
        <div class="card-section">
            <form action="/user/new_cite/{{pet}}" method="post" id="formularionuevacita">
                <select name="servicio" id="selectdeservicios">
                    <option value=""></option>
                </select>
                <input type="date" name="Fecha" placeholder="dd/mm/yyyy">
                <textarea name="descripcion" rows="5" cols="30" placeholder="Añada un descripcion"></textarea>
                <button class="button" type="submit" value="Submit">Guardar</button>
            </form>
        </div>
    </div>
    <button class="close-button" data-close aria-label="Close modal" type="button">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="reveal" id="M-Mcite" data-reveal style="width: 22em;">
    <div class="card" style="width: 20em;">
        <div class="card-divider">
            <h5>Modificando Cita</h5>
        </div>
        <div class="card-section">
            <form action="/user/new_cite/{{pet}}" method="post">
                <select name="servicio">
                    <option value=""></option>
                    {{#each servicios}}
                    <option value="{{_id}}">{{Nombre}}</option>
                    {{/each}}
                </select>
                <input type="date" name="Fecha" placeholder="dd/mm/yyyy">
                <textarea name="descripcion" rows="5" cols="30" placeholder="Añada un descripcion"></textarea>
                <button class="button" type="submit" value="Submit">Guardar</button>
            </form>
        </div>
    </div>
    <button class="close-button" data-close aria-label="Close modal" type="button">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<h1>Mis mascotas</h1>
<section class="lado grid-container fluid">
    <div class="grid-x grid-padding-x">
        <div class="cell small-6 mypest align-center" id="pets">
            {{#each mascotas}}
            <div class="card">
                <div class="card-divider d-flex cabecera-m" >
                    <a data-open="M-Lcite"><i class="fas fa-notes-medical"></i></a>
                    <h2>{{nombre}}</h2>
                    <a data-open="M-modific" id="Modificpet"><i class="fas fa-pencil-alt 2x" id="{{_id}}"></i></a>
                </div>
                <div class="card-section">
                    <div class="profile">
                        <div class="container-img">
                        </div>
                    </div>
                    <div class="d-flex datos">
                        <h6>{{sexo}}</h6>
                        <h6>{{tamaño}}</h6>
                        <h6>{{tipo.tipo}}</h6>
                    </div>
                    <div class="profile">
                        <div class="figure">
                            <a data-open="M-Ncite"  id="Newcitepet"> <i class="fas fa-plus fa-4x" id="{{_id}}"> </i></a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{#if citesM}}
        <div id="content" class="cell small-6 services" data-sticky-container="">
            <div class="stickY" data-sticky data-margin-top="0" data-top-anchor="content" data-btm-anchor="pets:bottom">
                <div class="grid-container">
                    <div class="grid-x grid-padding-x">
                        {{#each citesM}}
                        <div class="cell small-6">
                            <div class="card">
                                <div class="card-divider">
                                    {{pet.nombre}}
                                    {{!-- <a href="/user/modific_pet/5ed9372891a4010190dd515f">
                                        <i class="fas fa-pencil-alt 2x"></i></a> --}}
                                    <a data-open="M-Mcite" id="Modal"><i class="fas fa-pencil-alt 2x" id="5ed9372891a4010190dd515f"></i></a>
                                </div>
                                <div class="card-section">
                                    <h6> Servicio: {{servicio.Nombre}}</h6>
                                    <h6>Asistir: {{Fecha}}</h6>
                                    <div class="grid-container">
                                        <div class="grid-x">
                                            <div class="cell small-6">
                                                <a class="button tiny expanded alert" href="#">Eliminar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</section>