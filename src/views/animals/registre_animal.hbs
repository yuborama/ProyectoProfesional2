<h1>all pets</h1>

    <div class="card-section">
    <form action='/animals/new_animal' method="POST">
    <input type="text" name="tipo" placeholder="Nombre">
    <select name="id_tipo">
    {{#each tipos}}
    <option value="{{_id}}">{{tipo}}</option>
    {{/each}}
    </select>
    <div class="row">
    <label><input type="radio" name="sexo" value="macho">Macho
    <input type="radio" name="sexo" value="hembra" checked>Hembra</label>
    </div>
    <textarea name="descripcion" rows="10" cols="30" placeholder="una caracteristicas de tu mascota"></textarea>
  <button class="button" type="submit" value="Submit">Subir</button>
</form>
  </div>